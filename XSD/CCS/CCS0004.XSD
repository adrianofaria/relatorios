    <xs:element name='NumCtrlCCSOr' type='Controle'>
      <xs:annotation>
        <xs:documentation>
          <cat:InfCampo>
            <cat:NomeCampo>Número Controle CCS Original</cat:NomeCampo>
            <cat:DescricaoCampo>Número de controle do CCS original.</cat:DescricaoCampo>
          </cat:InfCampo>
        </xs:documentation>
      </xs:annotation>
    </xs:element>
    <xs:element name='Grupo_CCS0004_Conta' type='Grupo_CCS0004_ContaComplexType' maxOccurs='unbounded'>
      <xs:annotation>
        <xs:documentation>
          <cat:InfCampo>
            <cat:NomeCampo>Grupo Conta</cat:NomeCampo>
